{% extends 'base.html.twig' %}

{% block body %}

    <h1>Detalle del Producto</h1>


    <div class='product'>

        <img src="{{productos.imagen}}" alt="{{productos.nombre}}">

        <h2>{{productos.nombre}}</h2>

        <p class="texto">{{productos.descripcion}}</p>

        <div class="bot-product">
        <p class="text-precio">Precio: $</p>
        <p class="precio"> {{productos.precio}} </p>
        </div>

        <form method="post" action="{{ path('agregar_producto') }}">
            <input type="hidden" name="idproducto" value="{{ productos.id }}">
            <label for="cantidad">Cantidad:</label>
            <input type="number" id="cantidad" name="cantidad" value="1" min="1">
            <button class type="submit">Agregar a la Orden</button>
        </form>

        <div class="bot-product">
            <a href="{{ path('listar_productos') }}"button class="button-product"> Volver </a>
        </div>

    </div>
    

{% endblock %}
