{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de productos</h1>

    {% if app.flashes('success') is not empty %}
        <div class="alert alert-success">
            {{ app.flashes('success')|first }}
        </div>
    {% endif %}

    <div class='contenedor-productos'>

        {% for producto in productos %}
        <div class='product'>

            <img src="{{producto.imagen}}" alt="{{producto.nombre}}">

            <h2>{{producto.nombre}}</h2>

            <p class="texto">{{producto.descripcion}}</p>

            <div class="bot-product">
                <a href="{{ path('detalle_producto', {'id': producto.id}) }}"button class="button-product"> Ver detalles </a>
                <p class="text-precio">Precio: $</p>
                <p class="precio"> {{producto.precio}} </p>
            </div>

    </div>
        {% endfor %}
{% endblock %}